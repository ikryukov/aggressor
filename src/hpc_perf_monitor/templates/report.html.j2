<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Performance Analysis Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .chart-container {
            position: relative;
            height: 400px;
            width: 100%;
        }
        .summary-card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Performance Analysis Report</h1>
        <p class="text-muted">Generated on {{ timestamp }}</p>

        {% if commit_info %}
        <div class="card summary-card">
            <div class="card-header">
                <h5>Commit Information</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    {% for key, value in commit_info.items() %}
                    <li><strong>{{ key }}:</strong> {{ value }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}

        <div class="card summary-card">
            <div class="card-header">
                <h5>Summary Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Latency Differences</h6>
                        <ul>
                            <li>Average: {{ "%.2f"|format(summary.avg_latency_diff) }}%</li>
                            <li>Maximum: {{ "%.2f"|format(summary.max_latency_diff) }}%</li>
                            <li>Minimum: {{ "%.2f"|format(summary.min_latency_diff) }}%</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Bandwidth Differences</h6>
                        <ul>
                            <li>Average: {{ "%.2f"|format(summary.avg_bandwidth_diff) }}%</li>
                            <li>Maximum: {{ "%.2f"|format(summary.max_bandwidth_diff) }}%</li>
                            <li>Minimum: {{ "%.2f"|format(summary.min_bandwidth_diff) }}%</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="card summary-card">
            <div class="card-header">
                <h5>Latency Analysis</h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="latencyChart"></canvas>
                </div>
            </div>
        </div>

        <div class="card summary-card">
            <div class="card-header">
                <h5>Bandwidth Analysis</h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="bandwidthChart"></canvas>
                </div>
            </div>
        </div>

        <div class="card summary-card">
            <div class="card-header">
                <h5>Detailed Results</h5>
            </div>
            <div class="card-body">
                {{ table|safe }}
            </div>
        </div>

        {% if significant_changes %}
        <div class="card summary-card">
            <div class="card-header">
                <h5>Significant Changes</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Message Size</th>
                                <th>Latency Difference (%)</th>
                                <th>Bandwidth Difference (%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for change in significant_changes %}
                            <tr>
                                <td>{{ change.msg_size }}</td>
                                <td>{{ "%.2f"|format(change.latency_diff_pct) }}</td>
                                <td>{{ "%.2f"|format(change.bandwidth_diff_pct) }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <script>
        // Latency Chart
        new Chart(document.getElementById('latencyChart'), {
            type: 'line',
            data: {
                labels: {{ charts.latency.msg_sizes|tojson }},
                datasets: [{
                    label: 'Reference Latency',
                    data: {{ charts.latency.ref_latency|tojson }},
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }, {
                    label: 'Test Latency',
                    data: {{ charts.latency.test_latency|tojson }},
                    borderColor: 'rgb(255, 99, 132)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Latency (Î¼s)'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Message Size (bytes)'
                        }
                    }
                }
            }
        });

        // Bandwidth Chart
        new Chart(document.getElementById('bandwidthChart'), {
            type: 'line',
            data: {
                labels: {{ charts.bandwidth.msg_sizes|tojson }},
                datasets: [{
                    label: 'Reference Bandwidth',
                    data: {{ charts.bandwidth.ref_bandwidth|tojson }},
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }, {
                    label: 'Test Bandwidth',
                    data: {{ charts.bandwidth.test_bandwidth|tojson }},
                    borderColor: 'rgb(255, 99, 132)',
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Bandwidth (MB/s)'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Message Size (bytes)'
                        }
                    }
                }
            }
        });
    </script>
</body>
</html> 